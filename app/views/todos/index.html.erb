<h1> TODO LIST </h1>
<%= link_to "New Todo Item", new_todo_path %>
<% @todos.each do |todo| %>
  <li>
    <%= link_to todo.title, todo_path(todo.id) %>
    <%= link_to "Edit", edit_todo_path(todo[:id])%>
    <%= link_to "Delete", todo, method: :delete, data: {confitm: "Are you sure?"} %>
  </li>  
<% end %>
<%= link_to "Log Out", logout_path %>